<Window x:Class="MTGSimulator.MainMenuWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MTG Simulator" 
        Width="600" Height="500"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#1E1E1E">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!-- Title -->
        <TextBlock Grid.Row="0" 
                   Text="MTG Simulator" 
                   FontSize="48" 
                   FontWeight="Bold"
                   Foreground="White"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   Margin="0,0,0,20"/>
        
        <!-- Menu Buttons -->
        <StackPanel Grid.Row="1" 
                    HorizontalAlignment="Center" 
                    VerticalAlignment="Center">
            <Button x:Name="SinglePlayerButton"
                    Content="Single Player"
                    Width="250"
                    Height="50"
                    FontSize="18"
                    Click="SinglePlayerButton_Click"
                    Background="#007ACC"
                    Foreground="White"
                    BorderThickness="0"
                    Cursor="Hand"
                    Margin="0,0,0,15"/>
            
            <Button x:Name="MultiplayerButton"
                    Content="Multiplayer (Coming Soon)"
                    Width="250"
                    Height="50"
                    FontSize="18"
                    IsEnabled="False"
                    Background="#555555"
                    Foreground="#999999"
                    BorderThickness="0"
                    Cursor="Arrow"
                    Margin="0,0,0,15"/>
            
            <Button x:Name="DeckViewerButton"
                    Content="Deck Viewer"
                    Width="250"
                    Height="50"
                    FontSize="18"
                    Click="DeckViewerButton_Click"
                    Background="#007ACC"
                    Foreground="White"
                    BorderThickness="0"
                    Cursor="Hand"
                    Margin="0,0,0,15"/>
            
            <Button x:Name="SettingsButton"
                    Content="Settings"
                    Width="250"
                    Height="50"
                    FontSize="18"
                    Click="SettingsButton_Click"
                    Background="#555555"
                    Foreground="White"
                    BorderThickness="0"
                    Cursor="Hand"
                    Margin="0,0,0,15"/>
            
            <Button x:Name="ExitButton"
                    Content="Exit"
                    Width="250"
                    Height="50"
                    FontSize="18"
                    Click="ExitButton_Click"
                    Background="#555555"
                    Foreground="White"
                    BorderThickness="0"
                    Cursor="Hand"/>
        </StackPanel>
        
        <!-- Loading indicator (hidden by default) -->
        <StackPanel x:Name="LoadingPanel" 
                    Grid.Row="2"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Top"
                    Visibility="Collapsed"
                    Margin="0,20,0,0">
            <TextBlock Text="Loading card database..."
                       Foreground="White"
                       FontSize="16"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,10"/>
            <ProgressBar x:Name="LoadingProgressBar"
                         Width="300"
                         Height="20"
                         IsIndeterminate="True"/>
        </StackPanel>
    </Grid>
</Window>

