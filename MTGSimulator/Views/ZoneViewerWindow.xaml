<Window x:Class="MTGSimulator.Views.ZoneViewerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Zone Viewer" 
        Width="800" Height="600"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize"
        Focusable="True">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <Border Grid.Row="0" Background="#2D2D30" Padding="10">
            <TextBlock x:Name="ZoneTitle" 
                       Text="Zone" 
                       Foreground="White" 
                       FontSize="18" 
                       FontWeight="Bold"/>
        </Border>
        
        <!-- Card Canvas -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
            <Canvas x:Name="CardsCanvas" 
                    Background="#1E1E1E"
                    MouseDown="CardsCanvas_MouseDown"
                    MouseMove="CardsCanvas_MouseMove"
                    MouseUp="CardsCanvas_MouseUp"/>
        </ScrollViewer>
        
        <!-- Footer -->
        <Border Grid.Row="2" Background="#2D2D30" Padding="10">
            <TextBlock x:Name="CardCountText" 
                       Text="0 cards" 
                       Foreground="White"/>
        </Border>
    </Grid>
</Window>

