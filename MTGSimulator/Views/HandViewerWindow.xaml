<Window x:Class="MTGSimulator.Views.HandViewerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Your Hand" 
        Width="1000" Height="250"
        WindowStartupLocation="Manual"
        ResizeMode="CanResize"
        Topmost="False"
        ShowInTaskbar="True">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <Border Grid.Row="0" Background="#2D2D30" Padding="10">
            <StackPanel Orientation="Horizontal">
                <TextBlock x:Name="HandTitle" 
                           Text="Your Hand" 
                           Foreground="White" 
                           FontSize="16" 
                           FontWeight="Bold"
                           VerticalAlignment="Center"/>
                <TextBlock x:Name="CardCountText" 
                           Text=" (0 cards)" 
                           Foreground="LightGray" 
                           FontSize="14"
                           Margin="10,0,0,0"
                           VerticalAlignment="Center"/>
            </StackPanel>
        </Border>
        
        <!-- Card Canvas -->
        <Canvas x:Name="CardsCanvas" 
                Grid.Row="1"
                Background="#1E1E1E"
                ClipToBounds="True"
                MouseDown="CardsCanvas_MouseDown"
                MouseMove="CardsCanvas_MouseMove"
                MouseUp="CardsCanvas_MouseUp"/>
    </Grid>
</Window>

