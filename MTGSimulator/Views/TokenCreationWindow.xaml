<Window x:Class="MTGSimulator.Views.TokenCreationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Create Token" 
        Width="600" 
        Height="500"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Search Box -->
        <TextBox x:Name="SearchTextBox" 
                 Grid.Row="0"
                 Margin="0,0,0,10"
                 Padding="5"
                 TextChanged="SearchTextBox_TextChanged"
                 KeyDown="SearchTextBox_KeyDown">
            <TextBox.Style>
                <Style TargetType="TextBox">
                    <Setter Property="FontSize" Value="14"/>
                </Style>
            </TextBox.Style>
        </TextBox>
        
        <!-- Results List -->
        <ListBox x:Name="ResultsListBox" 
                 Grid.Row="1"
                 Margin="0,0,0,10"
                 SelectionChanged="ResultsListBox_SelectionChanged"
                 MouseDoubleClick="ResultsListBox_MouseDoubleClick">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal" Margin="5">
                        <TextBlock Text="{Binding Name}" FontWeight="Bold" Width="200" VerticalAlignment="Center"/>
                        <TextBlock Text="{Binding ManaCost}" Width="100" VerticalAlignment="Center" Margin="10,0"/>
                        <TextBlock Text="{Binding Type}" Width="200" VerticalAlignment="Center" TextTrimming="CharacterEllipsis"/>
                        <TextBlock Text="(Token)" Foreground="Orange" Margin="5,0" VerticalAlignment="Center">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsToken}" Value="True">
                                            <Setter Property="Visibility" Value="Visible"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        
        <!-- Selected Card Info -->
        <Border Grid.Row="2" 
                BorderBrush="Gray" 
                BorderThickness="1" 
                Padding="10" 
                Margin="0,0,0,10"
                Background="#F5F5F5">
            <StackPanel>
                <TextBlock x:Name="SelectedCardName" FontWeight="Bold" FontSize="14" Margin="0,0,0,5"/>
                <TextBlock x:Name="SelectedCardType" Margin="0,0,0,5"/>
                <TextBlock x:Name="SelectedCardText" TextWrapping="Wrap" MaxHeight="100" ScrollViewer.VerticalScrollBarVisibility="Auto"/>
            </StackPanel>
        </Border>
        
        <!-- Persist in Graveyard Option -->
        <CheckBox x:Name="PersistInGraveyardCheckBox" 
                  Grid.Row="3"
                  Content="Token persists when moved to graveyard or destroyed"
                  Margin="0,0,0,10"
                  IsChecked="False"/>
        
        <!-- Buttons -->
        <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Create Token" 
                    Width="100" 
                    Height="30" 
                    Margin="0,0,10,0"
                    Click="CreateButton_Click"
                    IsDefault="True"/>
            <Button Content="Cancel" 
                    Width="100" 
                    Height="30"
                    Click="CancelButton_Click"
                    IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window>

