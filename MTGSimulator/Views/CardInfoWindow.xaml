<Window x:Class="MTGSimulator.Views.CardInfoWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Card Info" 
        Width="450" Height="800"
        WindowStartupLocation="Manual"
        ResizeMode="CanResize"
        Topmost="False"
        ShowInTaskbar="True">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="200" MinHeight="100"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <Border Grid.Row="0" Background="#2D2D30" Padding="10">
            <TextBlock x:Name="CardNameText" 
                       Text="No card selected" 
                       Foreground="White" 
                       FontSize="16" 
                       FontWeight="Bold"
                       TextWrapping="Wrap"/>
        </Border>
        
        <!-- Card Info Content -->
        <ScrollViewer Grid.Row="1" 
                     VerticalScrollBarVisibility="Auto" 
                     Background="#1E1E1E"
                     Padding="15">
            <StackPanel>
                <!-- Card Image (smaller) -->
                <Border BorderBrush="#3F3F46" BorderThickness="2" 
                        Margin="0,0,0,15"
                        HorizontalAlignment="Center">
                    <Image x:Name="CardImage" 
                           Width="250" 
                           Height="350"
                           Stretch="Uniform"
                           RenderOptions.BitmapScalingMode="HighQuality"/>
                </Border>
                
                <!-- Card Details -->
                <StackPanel>
                    <TextBlock x:Name="ManaCostText" 
                               Foreground="LightGray" 
                               FontSize="14"
                               Margin="0,0,0,10"
                               TextWrapping="Wrap"/>
                    
                    <TextBlock x:Name="TypeText" 
                               Foreground="LightGray" 
                               FontSize="14"
                               FontWeight="Bold"
                               Margin="0,0,0,10"
                               TextWrapping="Wrap"/>
                    
                    <Separator Margin="0,0,0,10"/>
                    
                    <TextBlock x:Name="OracleText" 
                               Foreground="White" 
                               FontSize="12"
                               TextWrapping="Wrap"
                               LineHeight="18"/>
                </StackPanel>
            </StackPanel>
        </ScrollViewer>
        
        <!-- Resizable Divider -->
        <GridSplitter Grid.Row="2" 
                     Height="5" 
                     HorizontalAlignment="Stretch"
                     Background="#3F3F46"
                     ResizeDirection="Rows"
                     ShowsPreview="False"
                     Cursor="SizeNS"/>
        
        <!-- Game Log -->
        <Grid Grid.Row="3" Background="#1E1E1E">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            
            <Border Grid.Row="0" Background="#2D2D30" Padding="8,5">
                <TextBlock Text="Game Log" 
                           Foreground="White" 
                           FontSize="12" 
                           FontWeight="Bold"/>
            </Border>
            
            <ScrollViewer x:Name="LogScrollViewer"
                         Grid.Row="1" 
                         VerticalScrollBarVisibility="Auto"
                         HorizontalScrollBarVisibility="Disabled"
                         ScrollChanged="LogScrollViewer_ScrollChanged">
                <TextBox x:Name="LogTextBox"
                         Background="#0F0F0F"
                         Foreground="#CCCCCC"
                         FontFamily="Consolas"
                         FontSize="10"
                         IsReadOnly="True"
                         TextWrapping="Wrap"
                         BorderThickness="0"
                         Padding="8"
                         VerticalContentAlignment="Top"/>
            </ScrollViewer>
        </Grid>
    </Grid>
</Window>

